<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left_margin"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_deal_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/test_title"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_deal_userphone"
            style="@style/main_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_phone"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_deal_useraddress"
        style="@style/main_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left_margin"
        android:layout_marginTop="15dp"
        android:text="@string/test_address"
        android:textColor="@color/black_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_deal_remark"
        style="@style/main_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left_margin"
        android:layout_marginTop="10dp"
        android:text="备注"
        android:textColor="@color/black_text"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_adtivity_description"
        style="@style/main_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_left_margin"
        android:layout_marginTop="10dp"
        android:text="活动简介"
        android:textColor="@color/black_text"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:text="总金额"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_sum_money"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:lines="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/black_text"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
