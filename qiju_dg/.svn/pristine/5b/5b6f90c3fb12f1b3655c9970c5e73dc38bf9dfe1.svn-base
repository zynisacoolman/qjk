package com.zxing.android;

import android.app.AlertDialog;
import android.content.DialogInterface;
import android.content.Intent;
import android.os.Bundle;
import android.os.Handler;
import android.os.Message;
import android.support.v7.app.AppCompatActivity;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.RelativeLayout;
import android.widget.TextView;

import com.qijukeji.qiju_dg.R;
import com.qijukeji.utils.ConstantValues;
import com.qijukeji.utils.HttpUtil;
import com.qijukeji.utils.IntentUtil;
import com.qijukeji.utils.StaticField;
import com.qijukeji.view.UserDetailsActivity;

import org.json.JSONException;
import org.json.JSONObject;

import butterknife.Bind;
import butterknife.ButterKnife;
import butterknife.OnClick;

/**
 * Created by Administrator on 2017/6/21.
 */

public class PenreadActivity extends AppCompatActivity {
    @Bind(R.id.iv_title_back)
    ImageView img_back;
    @Bind(R.id.iv_title_right)
    ImageView img_right;
    @Bind(R.id.tv_title_name)
    TextView title_name;
    @Bind(R.id.select_title_show)
    RelativeLayout select_title_show;
    @Bind(R.id.ed_yhm_read)
    EditText ed_yhm_read;
    @Bind(R.id.bt_yhm_commit)
    Button bt_yhm_commit;
    private String staffid;
    private String staffUuid;
    private String brandid;
    private static final int HTTP_READ_YHQ = 2;//查询优惠券信息
    Handler handler = new Handler() {
        @Override
        public void handleMessage(Message msg) {
            switch (msg.what) {
                case HTTP_READ_YHQ:
                    String data2 = msg.obj.toString();
                    JsonToObj(data2);
                    break;
            }
        }
    };

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_penread);
        Intent intent = getIntent();
        staffid = intent.getStringExtra("staffid");
        staffUuid = intent.getStringExtra("staffUuid");
        brandid = intent.getStringExtra("brandid");
        ButterKnife.bind(this);
        initView();
    }

    private void initView() {
        title_name.setText("优惠码");
        img_right.setVisibility(View.INVISIBLE);
        title_name.setVisibility(View.VISIBLE);
        select_title_show.setVisibility(View.GONE);
    }

    @OnClick({R.id.iv_title_back, R.id.bt_yhm_commit})
    public void onClick(View view) {
        switch (view.getId()) {
            case R.id.iv_title_back:
                finish();
                break;
            case R.id.bt_yhm_commit:
                String yhm_number = ed_yhm_read.getText().toString();
                HttpUtil.VolleyHttpGet(this, ConstantValues.SYS_URL, yhm_number, staffid, handler, HTTP_READ_YHQ);
                break;
            default:
                break;
        }
    }

    private void JsonToObj(String data2) {
        String jg = null;
        String check = null;
        JSONObject json;
        AlertDialog.Builder builder = new AlertDialog.Builder(this);
        try {
            json = new JSONObject(data2);
            jg = json.getString("jg");
            if (jg.equals("true")) {
                check = json.getString("check");
                if (check.equals("true")) {
                    toDeal(json.getString("uuid"));
                } else {
                    toIntent(data2);
                }
            } else if (jg.equals("false")) {
                String errmsg = json.getString("errmsg");
                if (errmsg.equals("1")) {
                    builder.setTitle("温馨提示").setMessage("该优惠券不属于该门店");
                } else if (errmsg.equals("2")) {
                    builder.setTitle("温馨提示").setMessage("该优惠券已经使用过");
                } else if (errmsg.equals("3")) {
                    builder.setTitle("温馨提示").setMessage("活动尚未开始或已经结束");
                } else {
                    builder.setTitle("温馨提示").setMessage("扫描错误");
                }
                builder.setPositiveButton("确定", new DialogInterface.OnClickListener() {
                    public void onClick(DialogInterface dialog, int whichButton) {
                        finish();
                    }
                }).show();
            } else {
                builder.setTitle("温馨提示").setMessage("扫描错误").show();
            }

        } catch (JSONException e) {
            e.printStackTrace();
        }
    }

    private void toDeal(String uuid) {
        Bundle bundle = new Bundle();
        bundle.putSerializable("uuid", uuid);
        bundle.putSerializable(StaticField.KEY, StaticField.key2);
        IntentUtil.intentToNull(this, UserDetailsActivity.class, bundle);
        finish();
    }

    private void toIntent(String data) {
        Bundle bundle = new Bundle();
        bundle.putSerializable("data", data);
        bundle.putSerializable(StaticField.KEY, StaticField.key1);
        IntentUtil.intentToNull(this, UserDetailsActivity.class, bundle);
        finish();
    }
}
