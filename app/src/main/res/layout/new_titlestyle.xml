<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_newstyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_size"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/new_title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/new_title_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/new_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:src="@drawable/edit2_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/new_title_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:src="@drawable/share2_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/new_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:src="@drawable/list_icon" />
</LinearLayout>
